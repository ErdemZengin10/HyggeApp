<?xml version="1.0" encoding="utf-8"?>




<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">




<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    >
    <ImageView
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_chevron_left_24">

    </ImageView>


</androidx.appcompat.widget.Toolbar>


<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/detailViewPager"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/detailBrandNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Beymen Collection"
            android:textColor="#1A202C"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailOldPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="30D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailNewPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20D"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Ürün Açıklaması"
            android:textSize="16sp">

        </TextView>


        <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:id="@+id/longDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="TEST TEST TEST TEST"
            android:textSize="16sp">


        </TextView>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_button_detail"
            android:src="@drawable/ic_baseline_chevron_left_24"
            android:background="@drawable/size_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:id="@+id/number_items_text"
            android:textSize="20sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:id="@+id/right_button_detail"
            android:src="@drawable/ic_baseline_chevron_right_24"

            android:background="@drawable/size_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </ImageView>




    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView

    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:id="@+id/sizeRecyclerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>
    <Button
        android:background="@drawable/main_activity_viewpager_background"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/add_cart_btn"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Add to Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        >

    </Button>

    <Button
        android:id="@+id/goToMapsBtn"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Hangi Mağazada Var">

    </Button>
</LinearLayout>



</androidx.core.widget.NestedScrollView>
</LinearLayout>


